{% extends 'shop/_private/layouts' %}

{% set weightUnits = craft.commerce.settings.weightUnits %}
{% set dimensionUnits = craft.commerce.settings.dimensionUnits %}

{% block main %}

	<h1 class="text-3xl block sm:inline">Products</h1>

	{% paginate craft.products().type('clothes').limit(6) as pageInfo, products %}

	{{ include('shop/products/_includes/grid', { products, weightUnits, dimensionUnits }) }}
	{{ include('shop/products/_includes/pagination', { products, pageInfo }) }}

{% endblock %}
